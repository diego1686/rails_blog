

<% @posts.each do |post| %>
	<div class="post">
	<h1><%= post.title %></h1>	
	<em>Created by <%= post.user.name %> at <%= post.created_at.strftime("%Y-%m-%d %H:%M") %></em>
	<p>
		<%= truncate(post.body, :length => 100, :omission => '... ') %>
		<% if post.body.length > 25  %>
			<%= link_to "Read the full article", post_path(post) %>
		<% end %>
	</p>
	<% if current_user == post.user %>
		<%= link_to "Edit", edit_post_path(post) %> | <%= link_to "Delete", post, :method => :delete, :confirm => "Are you sure?" %>
	<% end %>
	</div>
<% end %>
