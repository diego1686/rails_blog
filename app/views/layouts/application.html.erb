<!DOCTYPE html>
<html>
<head>
  <title>Blog</title>
  <%= stylesheet_link_tag    "application", :media => "all" %>
  <%= javascript_include_tag "application" %>
  <%= csrf_meta_tags %>
</head>
<body>
<% if current_user %>
<div class="user">
	<span class="left"><%= link_to "Home", root_path %> <%= link_to "New", new_post_path %></span> <%= current_user.email %> | <%= link_to "Logout", signout_path %>
</div>
<% end %>

<%= render "shared/flash_messages" %>

<%= yield %>

</body>
</html>
